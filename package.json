{
  "name": "back-end",
  "version": "1.0.0",
  "main": "server.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "scripts": {
    "clean:build": "npm run build:scripts && node scripts/clean-build.js",
    "----------------": "--------------------------------------------------------------------------",
    "build:main": "tsc --project tsconfig.json",
    "build:scripts": "tsc --project scripts/tsconfig.json",
    "build:tests": "tsc --project tests/tsconfig.json",
    "build:all": "concurrently -n \"main,scripts,tests\" -c \"blue,magenta,cyan\" \"npm run build:main && echo \\x1b[34m[main]\\x1b[0m Build complete\" \"npm run build:scripts && echo \\x1b[35m[scripts]\\x1b[0m Build complete\" \"npm run build:tests && echo \\x1b[36m[tests]\\x1b[0m Build complete\"",
    "build": "npm run build:main",
    "-----------------": "--------------------------------------------------------------------------",
    "tests:checkforfiles": "npm run build:scripts && npx wait-on scripts/check-tests.js && node scripts/check-tests.js",
    "tests": "concurrently \"npm run build:tests\" \"npm run build:main\" && jest --config jest.config.js",
    "-------------------": "--------------------------------------------------------------------------",
    "lint": "eslint . --ext .ts",
    "pretty": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "--------------------": "--------------------------------------------------------------------------",
    "dev": "concurrently -n \"main,scripts,tests,server\" -c \"blue,magenta,cyan,green\" \"tsc --watch --project tsconfig.json\" \"tsc --watch --project ./scripts/tsconfig.json\" \"tsc --watch --project ./tests/tsconfig.json\" \"nodemon dist/server.js\"",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^5.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^30.0.4",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  }
}
